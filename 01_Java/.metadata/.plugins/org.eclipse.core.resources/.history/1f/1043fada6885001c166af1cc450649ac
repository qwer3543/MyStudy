package edu.class2.car;

/*  자동차 클래스
 *  속성(변수): 차량명, 모델명, 차량색상
 *  기능: 가고, 서고, 뒤로가고, 차량정보 확인
 */
public class Car {
	
	// 필드변수(속성)
	
	String name = "마이카"; // 차량명
	String model; // 모델명
	String color; // 차량색상
	
	// 생성자: 리턴타입 없음
	// 1. 클래스이름 () { } - 기본 생성자
	// 2. 클래스이름(매개변수,...) { }
	// 주의: 명시적으로 생성자 선언시 기본생성자 만들어 주지 않음
	Car() { 
		model = "드림카";
		color = "무지개색";
				
	}
	
	// 메소드(기능, 동작, 함수) 
	void run() {
		System.out.println(">>> 앞으로 이동");
	}
	
	
	
	
}
