
public class Ex04_plusEqual {

	public static void main(String[] args) {
		// 대입 연산자: = , += , -= , *= , /= , %=
		
		// +=) num += 2; (num = num + 2;와 같은 의미)
		// -=) num -= 2; (num = num - 2;와 같은 의미)
		// +=) num *= 2; (num = num * 2;와 같은 의미)
		// +=) num /= 2; (num = num / 2;와 같은 의미)
		// +=) num %= 2; (num = num % 2;와 같은 의미)
		
		int num1 = 10;
		int num2 = 20;
		int result = 0;
		
		System.out.println("result ->" + result);
		
		result += 15;
		System.out.println("result += 15 ->" + result);
		
		result += 15; 
		System.out.println("result(15) += 15 ->" + result);
		
		//==============================
		System.out.println("============================");
		
		result = 0;
		
		System.out.println("result ->" + result);
		result -= 10;
		System.out.println("result -= 10 ->" + result);
		
		//==============================
		System.out.println("============================");
				
		result = 10;
		System.out.println("result ->" + result);
		result *= 10;
		System.out.println("result *= 10 ->" + result);
		
		//==============================
		System.out.println("============================");
						
		result = 100;
		System.out.println("result ->" + result);
		result /= 10;
		System.out.println("result /= 10 ->" + result);
		
		//==============================
		System.out.println("============================");
		
		result = 10;
		System.out.println("result ->" + result);
		result %= 3; 
		System.out.println("result %(나눈 나머지)= 3 ->" + result);
		
		//==============================
		System.out.println("============================");
		
		

	}
	

}
