package com.mystudy.array;

public class Ex01_array1 {

	public static void main(String[] args) {
		// 배열(array): 동일한 데이터 타입들의 연속된 저장 공간
		// 배열의 선언: 자료형[] 변수명
		// 변수에 값 저장: 배열변수명[인덱스번호] = 값;
		
		/* 배열의 선언 및 생성
		 * 1. 자료형[] 변수명 = new 자료형[갯수];
		 * 1-1. 자료형 변수명[] = new 자료형[갯수];
		 * 2. 자료형[] 변수명 = new 자료형[] {값1,값2,값3,...,값n};
		 * 3. 자료형[] 변수명 = {값1,값2,값3,...,값n}; // n개의 저장공간생성 + 데이터 입력
		 */
		
		int[] arr = new int[6]; 
		// 마지막 저장공간은 5이다(-1)
		
		System.out.println("arr= " + arr);
		
		System.out.println("==============");
		
		arr[0] = 100; // 배열의 첫번째 위치에 100 저장
		System.out.println("arr[0]= " + arr[0]);
		
		arr[1] = 200;
		arr[2] = 300;
		arr[3] = 400;
		arr[4] = 500;
		arr[5] = 600;
		
		System.out.println("==============");
		
		int sum = 0;
		sum = arr[0] + arr[1] + arr[2] + arr[3] + arr[4] + arr[5];
		System.out.println("sum= " + sum);
		
		System.out.println("==============");
		
		sum = 0;
		
		for (int i= 0; i < 6; i++) {
			System.out.println(("arr[" + i + "]= ") + arr[i]);
		}
		
		System.out.println("==============");
		
		for (int idx= 0; idx < 6; idx++) {
			sum = sum + arr[idx];
		}
		System.out.println(sum);
		
		System.out.println("==============");
		
		// length 배열의 크기값을 확인
		System.out.println(arr.length);
		
		System.out.println("==============");
		
		sum = 0; // length 응용하기
		
		for (int idx= 0; idx < arr.length; idx++) {
			sum = sum + arr[idx];
		}
		System.out.println(sum);
		
		System.out.println("==============");
		
		
		
		
		
		
	}

}
