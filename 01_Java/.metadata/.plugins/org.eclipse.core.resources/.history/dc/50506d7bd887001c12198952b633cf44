package com.mystudy.array;

public class Ex04_array_swap {

	public static void main(String[] args) {
		// 변수값 서로 교환하기
		
		int a = 100;
		int b = 200;
		
		System.out.println("a: " + a);
		System.out.println("b: " + b);
		
		System.out.println("============결과 값 바꾸기============");
		// a와 b의 값을 서로 교환하기
		
		int c = 0;
		
		c = a;
		a = b;
		b = c;
		
		System.out.println("a: " + a);
		System.out.println("b: " + b);
		
		System.out.println("============문제 1===========");
		
		int[] num = {100,200,300,400,500};
		
		for (int i = 0; i < num.length; i++) {
			System.out.print(num[i] + " ");
		}
		System.out.println();
		
		// 위 배열에서 첫번째 값과 마지막 값을 바꾸기
		System.out.println("=====0 <-> 4교환=====");
		
		c = 0;
		
		c = num[0];
		num[0] = num[4];
		num[4] = c;
		
		for (int i = 0; i < num.length; i++) {
			System.out.print(num[i] + " ");
		}
		System.out.println();
		
		System.out.println("=====1 <-> 3교환=====");
		
		int[] num1 = {100,200,300,400,500};
		
		c = 0;
		
		c = num1[1];
		num1[1] = num1[3];
		num1[3] = c;
		
		for (int i = 0; i < num1.length; i++) {
			System.out.print(num1[i] + " ");
		}
		System.out.println();
		
		
	}

}
