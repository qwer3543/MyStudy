
public class Ex02 {

	public static void main(String[] args) {
		System.out.println("1234" + 1);
		System.out.println(1+"5678");
		System.out.println(1+5);
		System.out.println("====================");
		/*
		 1. 화면에 삼각형 출력
		 *
		 **
		 ***
		 ****
		 *****
		 */
		System.out.println("*");
		System.out.println("**");
		System.out.println("***");
		System.out.println("****");
		System.out.println("*****");
		
		System.out.println("=================");
		/*
		 2. 화면에 삼각형 출력
		     *
		    **
		   ***
		  ****
		 *****
		 */
		System.out.println("    *");
		System.out.println("   **");
		System.out.println("  ***");
		System.out.println(" ****");
		System.out.println("*****");
		
		System.out.println("=================");
		/* 화면에 구구단 출력 2단
		    2 * 1 = 2
		    2 * 2 = 4
		    2 * 3 = 6
		    ...
		    2 * 9 = 18
		 */
		System.out.println("구구단 2단");
		System.out.println("2 * 1 = "2 * 1);
		System.out.println(2 * 2);
		System.out.println(2 * 3);
		System.out.println("...");
		System.out.println(2 * 9);
		
		
		
	}

}
